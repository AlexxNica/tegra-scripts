#!/usr/bin/env bash

set -e

PACKAGE=drm

. scripts/env.sh

cd_package

$TOP/drm/autogen.sh --host=${CROSS_COMPILE%"-"} --prefix=$PREFIX --with-sysroot=$SYSROOT \
--enable-tegra-experimental-api \
--disable-cairo-tests \
--disable-intel \
--disable-radeon \
--disable-vmwgfx

make -j$NPROC
make DESTDIR=$SYSROOT install

package_success
