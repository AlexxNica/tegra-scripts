#!/usr/bin/env bash

. scripts/env.sh

cd $TOP/mesa
./autogen.sh --host=${CROSS_COMPILE%"-"} --prefix=$PREFIX --without-dri-drivers --with-gallium-drivers=nouveau --enable-gallium-egl --enable-gbm --enable-egl --with-egl-platforms=drm,wayland --enable-gles1 --enable-gles2 --enable-opengl
make -j4
make install
