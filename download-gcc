#!/usr/bin/env bash

set -e

. scripts/env.sh

f=$LINARO_GCC_PACKAGE.tar.xz
mkdir -p $TOP/out
outfile=$TOP/out/$f
url="https://releases.linaro.org/${LINARO_GCC_RELEASE}/components/toolchain/binaries/$f"
echo "Downloading $url..."
curl $url -o $outfile

echo "Extracting gcc..."
mkdir -p $TOP
tar xJf $outfile -C $TOP
rm $outfile
