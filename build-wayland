#!/usr/bin/env bash

set -e

. scripts/env.sh

mkdir -p $TOP/out/build/wayland
cd $TOP/out/build/wayland
$TOP/wayland/autogen.sh --host=${CROSS_COMPILE%"-"} --prefix=$PREFIX --with-sysroot=$SYSROOT --disable-documentation --disable-scanner
make -j$NPROC && make DESTDIR=$SYSROOT install

status "Installation successful!"
